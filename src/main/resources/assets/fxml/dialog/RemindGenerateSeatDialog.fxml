<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" fx:id="stage" xmlns="http://javafx.com/javafx/20.0.1"
       fx:controller="com.edp2021c1.ui.controller.ConfirmDialogController">
    <scene>
        <Scene stylesheets="@../../css/style.css">
            <BorderPane prefHeight="158.0" prefWidth="316.0" styleClass="dialog">
                <top>
                    <HBox prefHeight="25.0" prefWidth="312.0" BorderPane.alignment="CENTER">
                        <children>
                            <ImageView fx:id="icon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                       preserveRatio="true"/>
                            <Label prefHeight="24.0" prefWidth="175.0" text="提示"/>
                            <Button fx:id="closeBtn" alignment="CENTER" mnemonicParsing="false" onAction="#closeDialog"
                                    prefHeight="24.0" prefWidth="28.0" styleClass="closeButton" text="×"
                                    textAlignment="CENTER">
                                <HBox.margin>
                                    <Insets left="86.0"/>
                                </HBox.margin>
                            </Button>
                        </children>
                    </HBox>
                </top>
                <center>
                    <HBox alignment="CENTER" prefHeight="108.0" prefWidth="311.0" BorderPane.alignment="CENTER">
                        <children>
                            <ImageView fx:id="img" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true"
                                       preserveRatio="true">
                                <HBox.margin>
                                    <Insets right="12.0"/>
                                </HBox.margin>
                            </ImageView>
                            <Label prefHeight="37.0" prefWidth="151.0" text="请先生成座位表!">
                                <font>
                                    <Font size="20.0"/>
                                </font>
                                <HBox.margin>
                                    <Insets left="12.0"/>
                                </HBox.margin>
                            </Label>
                        </children>
                    </HBox>
                </center>
                <bottom>
                    <HBox alignment="CENTER_RIGHT" prefHeight="45.0" prefWidth="314.0" BorderPane.alignment="CENTER">
                        <children>
                            <Button fx:id="confirmBtn" mnemonicParsing="false" onAction="#closeDialog" prefHeight="26.0"
                                    prefWidth="47.0" text=" 确定 ">
                                <HBox.margin>
                                    <Insets right="48.0"/>
                                </HBox.margin>
                            </Button>
                        </children>
                    </HBox>
                </bottom>
            </BorderPane>
        </Scene>
    </scene>
</Stage>
