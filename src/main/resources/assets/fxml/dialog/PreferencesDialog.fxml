<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" fx:id="stage" title="RandomSeatGenerator - 首选项"
       xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.edp2021c1.fx.controller.PreferencesDialogController">
    <scene>
        <Scene stylesheets="@../../css/light.css">
            <VBox prefHeight="736.0" prefWidth="1232.0">
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="large-box">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label prefHeight="45.0" prefWidth="1212.0" text="座位表生成"/>
                    <HBox alignment="CENTER" prefHeight="60.0" prefWidth="1212.0">
                        <TextField fx:id="rowCountInput" promptText="行数">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="columnCountInput" promptText="列数">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="rbrInput" promptText="随机轮换的行数">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="lastRowPosInput" promptText="最后一排不可选位置">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="69.0" prefWidth="1212.0">
                        <TextField fx:id="nameListInput" promptText="名单 (按身高排序)">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextField fx:id="groupLeaderListInput" promptText="组长列表">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextArea fx:id="separateListInput" prefHeight="56.0" prefWidth="165.0" promptText="拆分列表">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextArea>
                        <CheckBox fx:id="luckyOption" mnemonicParsing="false" text="随机挑选一名幸运儿"/>
                    </HBox>
                    <HBox alignment="CENTER" prefHeight="65.0" prefWidth="1212.0">
                        <Button mnemonicParsing="false" onAction="#loadConfigFromFile" prefHeight="26.0"
                                prefWidth="80.0" text="从文件加载">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#applySeatConfig" prefHeight="26.0" prefWidth="80.0"
                                text="应用">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                    </HBox>
                </VBox>
                <VBox alignment="CENTER" prefHeight="539.0" prefWidth="1232.0" styleClass="large-box">
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </padding>
                    <Label prefHeight="45.0" prefWidth="1212.0" text="关于"/>
                    <HBox alignment="CENTER" prefHeight="454.0" prefWidth="1210.0">
                        <ImageView fitHeight="275.0" fitWidth="275.0" pickOnBounds="true" preserveRatio="true">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                            <Image url="@../../img/logo.png"/>
                        </ImageView>
                        <VBox prefHeight="264.0" prefWidth="958.0">
                            <Label alignment="CENTER" prefHeight="32.0" prefWidth="237.0"
                                   style="-fx-font-family: Impact;" text="RandomSeatGenerator">
                                <font>
                                    <Font size="24.0"/>
                                </font>
                            </Label>
                            <Label prefHeight="24.0" prefWidth="219.0" text="版本            1.2.0 (Build 6)"/>
                            <Label prefHeight="23.0" prefWidth="452.0"
                                   text="官方仓库    https://github.com/edp2021c1/RandomSeatGenerator-JE.git"/>
                            <TextArea editable="false" prefHeight="361.0" prefWidth="935.0"
                                      styleClass="license-text-area"
                                      text="Copyright (c) 2023  EDP2021C1&#10;This program is free software: you can redistribute it and/or modify it under the terms of the GNU General Public License as published by the Free Software Foundation, either version 3 of the License, or (at your option) any later version.&#10;This program is distributed in the hope that it will be useful, but WITHOUT ANY WARRANTY; without even the implied warranty of MERCHANTABILITY or FITNESS FOR A PARTICULAR PURPOSE. &#10;See the GNU General Public License for more details. &#10;You should have received a copy of the GNU General Public License along with this program. &#10;If not, see &lt;https://www.gnu.org/licenses/&gt;.&#10;&#10;Libraries that have been used in RandomSeatGenerator are listed below (Sorted by date added):&#10;JavaFX v20.0.1 (GPLv2)&#10;Gson v2.10.1 (Apache 2.0)&#10;EasyExcel v3.3.2 (Apache 2.0)&#10;&#10;Contributors:&#10;Calboot &lt;calboot39@outlook.com&gt;"
                                      wrapText="true">
                                <VBox.margin>
                                    <Insets bottom="5.0"/>
                                </VBox.margin>
                            </TextArea>
                        </VBox>
                    </HBox>
                    <ButtonBar prefHeight="40.0" prefWidth="200.0">
                        <buttons>
                            <Button mnemonicParsing="false" onAction="#confirm" prefHeight="26.0" prefWidth="80.0"
                                    text="确定"/>
                            <Button mnemonicParsing="false" onAction="#cancel" prefHeight="26.0" prefWidth="80.0"
                                    text="取消"/>
                        </buttons>
                    </ButtonBar>
                </VBox>
            </VBox>
        </Scene>
    </scene>
</Stage>
