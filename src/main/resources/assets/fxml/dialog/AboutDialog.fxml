<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" fx:id="aboutDialog" title="关于 RandomSeatGenerator"
       xmlns="http://javafx.com/javafx/20.0.1" fx:controller="com.edp2021c1.ui.controller.AboutDialogController">
    <scene>
        <Scene stylesheets="@../../css/style.css">
            <BorderPane prefHeight="190.0" prefWidth="317.0" styleClass="dialog">
                <left>
                    <HBox alignment="TOP_CENTER" prefHeight="165.0" prefWidth="81.0" BorderPane.alignment="CENTER">
                        <children>
                            <ImageView fx:id="img" fitHeight="64.0" fitWidth="64.0" pickOnBounds="true"
                                       preserveRatio="true"/>
                        </children>
                    </HBox>
                </left>
                <center>
                    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                        <children>
                            <Label alignment="CENTER" prefHeight="32.0" prefWidth="237.0"
                                   style="-fx-font-family: Impact;" styleClass="middleLabel" text="RandomSeatGenerator">
                                <font>
                                    <Font size="22.0"/>
                                </font>
                            </Label>
                            <Label prefHeight="24.0" prefWidth="219.0" text="  JDK Version: 17"/>
                            <Label prefHeight="24.0" prefWidth="219.0" text="  JavaFX Version: 20.0.1">
                                <VBox.margin>
                                    <Insets bottom="12.0"/>
                                </VBox.margin>
                            </Label>
                            <Label prefHeight="24.0" prefWidth="219.0" text="  Copyright EDP2021C1">
                                <VBox.margin>
                                    <Insets top="12.0"/>
                                </VBox.margin>
                            </Label>
                        </children>
                    </VBox>
                </center>
                <bottom>
                    <HBox alignment="CENTER" prefHeight="45.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                        <children>
                            <Button fx:id="licenseBtn" alignment="CENTER" mnemonicParsing="false"
                                    onAction="#openLicense" prefHeight="26.0" prefWidth="72.0" text="LICENSE"
                                    textAlignment="CENTER">
                                <HBox.margin>
                                    <Insets right="12.0"/>
                                </HBox.margin>
                            </Button>
                            <Button fx:id="closeBtn" alignment="CENTER" mnemonicParsing="false" onAction="#closeDialog"
                                    prefHeight="26.0" prefWidth="72.0" text="关闭" textAlignment="CENTER">
                                <HBox.margin>
                                    <Insets left="12.0"/>
                                </HBox.margin>
                            </Button>
                        </children>
                    </HBox>
                </bottom>
                <top>
                    <HBox prefHeight="22.0" prefWidth="300.0" BorderPane.alignment="CENTER">
                        <children>
                            <ImageView fx:id="icon" fitHeight="24.0" fitWidth="24.0" pickOnBounds="true"
                                       preserveRatio="true"/>
                            <Label prefHeight="24.0" prefWidth="175.0" text=" 关于 RandomSeatGenerator"/>
                            <Button fx:id="closeBtn1" alignment="CENTER" mnemonicParsing="false" onAction="#closeDialog"
                                    prefHeight="24.0" prefWidth="28.0" styleClass="closeButton" text="×"
                                    textAlignment="CENTER">
                                <HBox.margin>
                                    <Insets left="86.0"/>
                                </HBox.margin>
                            </Button>
                        </children>
                        <BorderPane.margin>
                            <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                        </BorderPane.margin>
                    </HBox>
                </top>
            </BorderPane>
        </Scene>
    </scene>
</Stage>
